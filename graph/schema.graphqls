# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  id: Int!
  email: String!
}

type AuthPayload {
  token: String
  user: User
}

type Query {
  login(email: String!, password: String!): AuthPayload!
}

input NewUser {
  email: String!
  password: String!
}

type Mutation {
  createUser(input: NewUser!): User!
}
